<h1>edit</h1>
<form method="POST" action="/farmer-profile/{{product._id}}/edit">
  <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Name</label>
    <input value="{{product.name}}" name="name" type="text" class="form-control" id="exampleInputEmail1">
  </div>
  <div class="mb-3">
    <label for="exampleInputDescription1" class="form-label">Quantity</label>
    <input value="{{product.quantity}}" name="quantity" type="number" class="form-control" id="exampleInputDescription1">
  </div>
  <div class="mb-3">
    <label for="exampleInputDescription1" class="form-label">Price</label>
    <input value="{{product.price}}" name="price" step="any" type="number" class="form-control" id="exampleInputDescription1">
  </div>
  <button type="submit" class="btn btn-primary">Update</button>
</form>